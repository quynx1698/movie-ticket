extends ../layouts/common

block content
    section.position-relative
            #particles-js
                canvas.particles-js-canvas-el(width='1898' height='315' style='width: 100%; height: 100%;')
            .container
                .row.text-center
                    .col
                        h1 Thành viên
                        nav(aria-label='breadcrumb')
                            ol.breadcrumb.justify-content-center.bg-transparent.p-0.m-0
                                li.breadcrumb-item
                                    a.text-dark(href='#') Trang chủ
                                li.breadcrumb-item Thành viên
                                li.breadcrumb-item.active.text-primary Đăng ký
    section
        .container
            .row.justify-content-center
                .col-6.text-center.box-shadow.p-5
                    if errors
                        each error in errors
                            .alert.alert-danger= error
                    h2 Đăng ký
                    form.mb-5(method="POST")
                        .form-group.mt-5
                            input#email.form-control(type="email" name="email" placeholder="Địa chỉ email" required value=values ? values.email : "")
                        .form-group.mt-4
                            input#password.form-control(type="password" name="password" placeholder="Mật khẩu" required)
                        .form-group.mt-4
                            input#rePassword.form-control(type="password" name="rePassword" placeholder="Nhập lại mật khẩu" required)
                        button.btn.btn-primary.btn-block.mt-4 Đăng ký
