extends ../../layouts/adminCommon

block content
    section.position-relative
            #particles-js
                canvas.particles-js-canvas-el(width='1898' height='315' style='width: 100%; height: 100%;')
            .container
                .row.text-center
                    .col
                        h1 Bảng điều khiển
                        nav(aria-label='breadcrumb')
                            ol.breadcrumb.justify-content-center.bg-transparent.p-0.m-0
                                li.breadcrumb-item
                                    a.text-dark(href='#') Trang chủ
                                li.breadcrumb-item Quản lý phim
                                li.breadcrumb-item.active.text-primary Thêm phim mới
    section
        .container
            .row.justify-content-center
                .col-md-9
                    form(method="POST" encType="multipart/form-data").row.row-cols-1.row-cols-md-2.justify-content-center
                        .col-md-12
                            .row.justify-content-center
                                .col-md-6
                                    .form-group.text-center
                                        label.d-block(for='thumbnail') Hình ảnh phim
                                        input#thumbnail.d-block.mx-auto.py-3.text-muted(type="file" name="thumbnail" accept="image/*" required)
                                        img#output.img-fluid
                                    .form-group.mt-4.mb-5
                                        label(for='name') Tên phim
                                        input.form-control(type='text' name='name' placeholder='Nhập tên phim' value='')
                        .col
                            .form-group
                                label(for='genre') Thể loại
                                input.form-control(type='text' name='genre' placeholder='Nhập thể loại' value='')
                        .col
                            .form-group
                                label(for='pg') Giới hạn độ tuổi
                                input.form-control(type='text' name='pg' placeholder='Nhập giới hạn độ tuổi' value='')
                        .col
                            .form-group
                                label(for='duration') Thời lượng
                                input.form-control(type='text' name='duration' placeholder='Nhập thời lượng' value='')
                        .col
                            .form-group
                                label(for='actor') Diễn viên
                                input.form-control(type='text' name='actor' placeholder='Nhập diễn viên' value='')
                        .col
                            .form-group
                                label(for='release') Ngày phát hành
                                input.form-control(type='text' name='release' placeholder='Nhập ngày phát hành' value='')
                        .col
                            .form-group
                                label(for='nation') Quốc gia
                                input.form-control(type='text' name='nation' placeholder='Nhập quốc gia' value='')
                        .col
                            .form-group
                                label(for='imdb') Điểm IMDB
                                input.form-control(type='text' name='imdb' placeholder='Nhập điểm IMDB' value='')
                        .col
                            .form-group
                                label(for='producer') Nhà sản xuất
                                input.form-control(type='text' name='producer' placeholder='Nhập nhà sản xuất' value='')
                        .col-md-12
                            .form-group
                                label(for='description') Nội dung
                                textarea.form-control(rows="3" name='description' placeholder='Nhập nội dung' value='')
                        .col
                            button.btn.btn-primary.btn-block.mt-4 Tạo phim mới
    script.
        var thumbnail = document.getElementById('thumbnail');
        thumbnail.addEventListener('change', function(e) {
            var output = document.getElementById('output');
            output.src = URL.createObjectURL(event.target.files[0]);
            output.onload = function() {
                URL.revokeObjectURL(output.src) // free memory
            }
        })
